<h1 class="p-1">Albums 
</h1>
<div class="container-fluid">
  <br>
  <div class="row">
    <hr class="hr">
    <br>
    <div class="container mt-3 ">
      <%= search_form_for @q, url: search_home_index_path,html: { method: :post } do |f| %>
      <%= f.search_field :tags_name_eq,placeholder: " Search By tag...",autocomplete: "off"%> 
      <%=f.submit "search" ,class:"bn632-hover bn26"%> <% end %>
      <br>
    </div>
    <br>
    <% @albums.each do |album| %>
    <div class="col-md-4 col-sm-12">
      <div class="card cardShadow">
        <div class="card-header ">
          <h2 class="p-1 text-center">Album : <small class="text-center" style="color:blue"> <%= album.title %>
            </small>
          </h2>
        </div>
        <div class="card-body">
          <%= link_to album do %>
          <% if album.cover_picture.attached? %>
          <div style="width:300px; height:200px; text-align:center" class= "card-top-img img-fluid">
            <%= image_tag(album.cover_picture,style:"width:100%; height:100%") %>
          </div>
          <% end %>
        </div>
        <% end %>
        <div class="card-footer text-center " >
          <h6><strong>Published By: </strong><span ><%= album.user.name%></span></h6>
          <p><strong>tags : </strong><span class="text-muted"><%= album.tags_method%></span></p>
          <p><strong>Published On: </strong><span class="text-muted"><%= album.created_at.to_s.split(' ')[0] %></span></p>
          <p><strong>Last Updated: </strong><span class="text-muted"><%= album.updated_at.to_s.split(' ')[0] %></span></p>
        </div>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
</div>