
         <h2 class="p-1">Album : <small style="color:blue"> <%= @album.title %>
         </small>
         </h2>
         <hr class="hr"> 
         <br>
         
         <div class="container-fluid">
             <div class="card-footer " >
                     <p><strong>Description: </strong><span class="text-muted"><%= @album.description%></span></p>
               
               </div>
         <div class="row">
               <% (0... @album.images.count).each do |image|   %>
                  <div class="col-md-4 col-sm-12">
                     <div class="card cardShadow">
                     <div class="card-header ">
                     <%if user_signed_in?  %>
                     <%= link_to purge_attachment_path(@album.images[image]),  method: :delete,
                           data: { confirm: 'Are you sure?' }  do %>
                  
                  <i class="fa fa-times pull-right" style="font-size:20px;"></i>
                     <% end %>
                     <% end  %>
                  </div>
                     <div class="card-body">
                     <%= link_to do %>
                     <% if @album.images.attached? %>
                        <div style="width:300px; height:200px">
                     <%= image_tag(@album.images[image],class: "card-top-img img-fluid",style: "width:100%; height:100%") %>
                  </div>
                     <% end %>
                     </div>
                     <% end %>
                    

                     </div><br>

                  </div>

                  <% end %>
               
               </div>
         </div>


         <br>
            <% if user_signed_in?  %>
           <%= link_to "Back", albums_path ,class:"btn btn-secondary"%>
           <% else %>
            <%= link_to "Back", home_index_path ,class:"btn btn-secondary"%>
            <% end  %>

         <hr>
      
